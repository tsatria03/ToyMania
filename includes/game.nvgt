gametimer.pause();
    if (quit_menu==true)
    {
        setupmenu(false);
        m.add_item("Yes", "yes");
        m.add_item("No", "no");
        m.intro_text = "Are you sure you want to quit the game? You will lose all progress for this current game session.";
        int res = m.run();
        string confirm = m.get_selected_item_id();
        if (res == -1 or confirm == "no")
        {
            speak("canceled");
boss_timer.resume();
gametimer.resume();
            return;
        }
    }
boss_timer.resume();
gametimer.resume();
    fade_multi_pool();
    last_level_time = 0;
level = 1;
money = 0;
    collected_toys = 0;
    collected_keys = 0;
    killed_gards = 0;
    destroyed_cars = 0;
    moved_steps = 0;
    session_playtime = 0;
