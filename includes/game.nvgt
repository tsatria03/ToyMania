if (key_repeating(KEY_D) and doormove == false)
{
    if (doors.length() == 0)
    {
        speak("There are no doors currently present.");
        return;
    }
    if (shift_is_down())
    {
int req = doors[0].required_keys;
int missing = req - collected_keys;
if (missing > 0)
{
speak("You've collected " + collected_keys + " out of " + req + " required keys. You need " + missing + " more keys to unlock the door.");
}
else
{
speak("You've collected enough required keys to unlock the door!");
}
    }
    else if (endless)
    {
        speak("The door is at " + doors[0].startx + ", " + doors[0].starty + ".");
    }
    else
    {
        int dx = doors[0].startx - me.x;
        int dy = doors[0].starty - me.y;
        int distance = abs(dx) + abs(dy);
        string direction = "";
        if (dy < 0) direction += "behind you";
        else if (dy > 0) direction += "in front of you";
        if (dx < 0) direction += (direction == "" ? "on your left" : " and to the left");
        else if (dx > 0) direction += (direction == "" ? "on your right" : " and to the right");
        if (direction == "") direction = "right here";
        speak("The door is " + direction + ", about " + distance + " feet away.");
    }
}
