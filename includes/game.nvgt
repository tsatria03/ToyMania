int base = endless ? 10000 : 1000;
int bonus = endless ? 2500 : 250;
int added = bonus * (gamemod - 1);
health = base + added;
maxhealth = base + added;
storehealth = base + added;
storemaxhealth = base + added;
    me.x = endless ? 50 : 25;
me.y = endless ? 50 : 25;
